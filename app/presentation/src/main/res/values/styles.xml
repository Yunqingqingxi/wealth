<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NumberPickerStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:colorControlNormal">#E0E0E0</item>
        <item name="android:textColor">#000000</item>
        <item name="android:editTextColor">#999999</item>
    </style>

    <!-- 添加底部弹窗样式 -->
    <style name="BottomSheetDialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="shapeAppearanceOverlay">@style/BottomSheetShapeStyle</item>
    </style>

    <style name="BottomSheetShapeStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>
</resources> 