<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.MyApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 主题颜色 -->
        <item name="colorPrimary">#FDD843</item>
        <item name="colorPrimaryVariant">#FDD843</item>
        <item name="colorOnPrimary">@android:color/black</item>
        
        <!-- 按钮样式 -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:height">56dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">17sp</item>
        <item name="cornerRadius">40dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="hintTextColor">#666666</item>
        <item name="android:textColorHint">#999999</item>
        <item name="endIconTint">#666666</item>
        <item name="hintEnabled">false</item>
    </style>
</resources>