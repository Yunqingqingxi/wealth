<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 应用主题 -->
    <style name="Theme.MoneyManager" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 主题颜色配置 -->
        <item name="colorPrimary">@color/yellow_primary</item>
        <item name="colorPrimaryDark">@color/yellow_primary</item>
        <item name="colorAccent">@color/yellow_primary</item>
        
        <!-- 状态栏配置 -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- 背景颜色 -->
        <item name="android:windowBackground">@color/white</item>
        
        <!-- 文字颜色 -->
        <item name="android:textColor">@color/text_primary</item>
        
        <!-- 按钮样式 -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>
</resources>