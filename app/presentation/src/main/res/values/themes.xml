<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Wealth" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/background_yellow</item>
        <item name="colorPrimaryDark">@color/background_yellow</item>
        <item name="colorAccent">@color/background_yellow</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_yellow</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Background color -->
        <item name="android:windowBackground">@color/white</item>
        
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- 使用自定义的 TextInputLayout 样式 -->
        <item name="textInputStyle">@style/CustomTextInputLayout</item>
    </style>
</resources>