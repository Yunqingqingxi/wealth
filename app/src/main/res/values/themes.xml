<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Wealth" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Wealth" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/background_yellow</item>
        <item name="colorPrimaryDark">@color/background_yellow</item>
        <item name="colorAccent">@color/background_yellow</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_yellow</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Background color -->
        <item name="android:windowBackground">@color/white</item>
        
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- 强制使用浅色主题 -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.YourApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 其他主题配置 -->
    </style>
</resources>